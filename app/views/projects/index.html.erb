<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Project name</th>
      <th>User stories</th>
      <th>Wireframes</th>
      <th>Erd</th>
      <th>Proposal</th>
      <th>Technologies</th>
      <th>Features</th>
      <th>Bonus</th>
      <th>Issues</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.project_name %></td>
        <td><%= project.user_stories %></td>
        <td><%= project.wireframes %></td>
        <td><%= project.erd %></td>
        <td><%= project.proposal %></td>
        <td><%= project.technologies %></td>
        <td><%= project.features %></td>
        <td><%= project.bonus %></td>
        <td><%= project.issues %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

